# ====================================
# DOCEGEST V5.0 - CONFIGURAÇÕES DE PRODUÇÃO
# ====================================
# COPIE ESTE ARQUIVO PARA .env.production E PREENCHA COM SEUS VALORES

# Servidor
PORT=5000
NODE_ENV=production

# Banco de Dados MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=seu_usuario_aqui
DB_PASSWORD=sua_senha_segura_aqui
DB_NAME=segredo_do_sabor

# JWT (JSON Web Token) - GERE UMA CHAVE ÚNICA E SEGURA!
JWT_SECRET=gere-uma-chave-secreta-unica-com-pelo-menos-32-caracteres
JWT_EXPIRES_IN=7d

# CORS (Origem permitida para o frontend)
CORS_ORIGIN=http://seu-dominio.com

# WhatsApp Evolution API
WHATSAPP_PROVIDER=demo
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=sua-api-key-aqui
EVOLUTION_INSTANCE_NAME=sua-instancia

# WhatsApp Meta API (Alternativa)
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# Assistente Virtual OpenAI (Opcional)
OPENAI_API_KEY=

# Upload de Arquivos
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Logs
LOG_LEVEL=info
